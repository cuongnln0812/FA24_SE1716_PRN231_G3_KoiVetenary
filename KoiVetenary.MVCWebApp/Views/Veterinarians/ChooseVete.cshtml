<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(".clickable-row").click(function () {
            var veterinarianId = $(this).data("id");
            // Update the API appointment with VeterinarianId
            $.ajax({
                url: '/api/Appointments/UpdateWithVeterinarian',
                type: 'POST',
                data: JSON.stringify({ VeterinarianId: veterinarianId }),
                contentType: 'application/json; charset=utf-8',
                success: function () {
                    // Redirect to the services page
                    window.location.href = '/Services?VeterinarianId=' + veterinarianId;
                },
                error: function () {
                    alert('Error updating appointment');
                }
            });
        });
    });
</script>
